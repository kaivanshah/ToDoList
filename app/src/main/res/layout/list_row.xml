<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textColor="@color/colorBlack" android:gravity="center_horizontal" android:background="@color/colorBlue" android:layout_gravity="center" android:id="@+id/tv_DateTitle" android:layout_weight="2"  />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textColor="@color/colorBlack" android:paddingBottom="@dimen/activity_vertical_margin" android:id="@+id/tv_Title" android:layout_weight="1"  />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textColor="@color/colorBlack" android:paddingBottom="@dimen/activity_vertical_margin" android:id="@+id/tv_Desc" android:layout_weight="1"  />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textColor="@color/colorBlack" android:paddingBottom="@dimen/activity_vertical_margin" android:id="@+id/tv_Date" android:layout_weight="1"  />
</LinearLayout>